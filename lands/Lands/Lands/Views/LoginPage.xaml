<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lands.Views.LoginPage">
    <ContentPage.Content>
        <StackLayout Padding="10, 30, 10, 5">
            <Label Text="Lands" FontSize="Large" FontAttributes="Bold" HorizontalOptions="Center"/>
            <Image Source="onu.png" WidthRequest="200"/>
            <Label Text="Correo" />
            <Entry Placeholder="Ingrese su correo..." Keyboard="Email"/>
            <Label Text="Clave" />
            <Entry Placeholder="Ingrese su clave..." IsPassword="True"/>
            <ActivityIndicator></ActivityIndicator>
            <Button Text="Iniciar sesión" BackgroundColor="Accent" TextColor="White" BorderRadius="15"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>